{
    "comments": {
        "lineComment": ";"
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        {"open": "[", "close": "]", "notIn": ["string", "comment"]},
        {"open": "(", "close": ")", "notIn": ["string", "comment"]},
        {"open": "'", "close": "'", "notIn": ["string", "comment"]},
        {"open": "\"", "close": "\"", "notIn": ["string", "comment"]}
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "\\s*%macro",
            "end": "\\s*%endmacro"
        }
    },
    "wordPattern": "[_@\\$a-zA-Z][_@\\$0-9a-zA-Z]*",
    "indentationRules": {
        "increaseIndentPattern": "\\s*(%macro|\\w+:)",
        "decreaseIndentPattern": "\\s*%endmacro"
    }
}